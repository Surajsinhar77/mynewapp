generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Projects {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    projectName     String
    dateStart       DateTime
    dateEnd         DateTime
    projectsTags    String
    projectLink     String
    githubLink      String
    projectOverview String
    feature         String[]
    techStack       String[]
    imageFolderName String
    imageRef        String
}

model Users {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  email    String @unique
  password String
  role     String?
}

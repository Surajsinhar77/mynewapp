generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env(DATABASE_URL);
}

model projects {
  id           Int      @id @map("_id")
  name         String
  date         DateTime
  tags         String[]
  link         String
  img          String
  imgFolderName String
  images       String[]
  ImpLink      Json
  theDiscription Json
}

model users {
  id           Int     @id @default(auto()) @map("_id") @db.ObjectId
  name         String  # Optional (remove the question mark if required)
  email        String  @unique
  password     String  # Security: Implement proper hashing before storing
  role         String?
}